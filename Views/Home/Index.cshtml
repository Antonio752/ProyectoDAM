@{
    ViewData["Title"] = "Home Page";
}

<br>
<br>
<br>
<div class="row">
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center orange">
                <i class="large material-icons white-text">star_rate</i>
                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Especialidad" asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Especialidades:</span>
                <p>Aquí podrás dar de alta nuevas Especialidades, modificarlas y borrarlas.</p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Especialidad" asp-action="Index">Ver más</a>
            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center blue darken-1">
                <i class="large material-icons white-text">face</i>
                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Medico" asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Médicos:</span>
                <p>Aquí podrás dar de alta nuevos Médicos, modificar sus datos y relacionarlos con su Especialidad.</p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Medico" asp-action="Index">Ver más</a>
            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center green accent-4">
                <i class="large material-icons white-text">assignment_ind</i>
                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Paciente" asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Pacientes:</span>
                <p>Aquí podrás dar de alta nuevos Pacientes, modificar sus datos y relacionarlos con su Especialidad.</p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Paciente" asp-action="Index">Ver más</a>
            </div>
        </div>
    </div>
    <div class="col s12 m4"></div>
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image center brown accent-4">
          <i class="material-icons large white-text">access_time</i>                    
        </div>
        <div class="card-content">
          <span class="card-title">Turnos:</span>
          <p>Aquí podrás dar de alta nuevos Turnos para un paciente asignandole un médico en particular.</p>
        </div>
        <div class="card-action blue-grey darken-3">
          <a asp-controller="Turno" asp-action="Index">Asignar turno</a>          
        </div>
      </div>
    </div>
</div>