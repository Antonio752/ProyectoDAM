@model Turnos.Models.Especialidad
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Especialidades</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />    
    <link rel="stylesheet" href="~/css/site.css" />    
    <link type="text/css" rel="stylesheet" href="~/css/materialize.min.css" media="screen,projection"/>
    <script type="text/javascript" src="~/js/materialize.min.js"></script>
</head>
<body>
<h4>Â¿Seguro desea eliminar la siguiente especialidad?</h4>
<div>
    <h5>Especialidad</h5>
    <hr />
    <div class="row">
        <div class="col s12 m6">
            <div class="card hoverable orange darken-1">
                <div class="card-content white-text">  
                    <span class="card-title"><h5><b>@Html.DisplayNameFor(model => model.Descripcion): @Html.DisplayFor(model => model.Descripcion)</b></h5></span>                                                      
                </div>
                <div class="card-action blue-grey darken-2">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdEspecialidad" />                        
                        <input type="submit" value="ELIMINAR" class="waves-effect waves-light btn-small orange lighten-2" />                        
                        <a asp-action="Index" class="right">Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>       
</div>
</body>
</html>